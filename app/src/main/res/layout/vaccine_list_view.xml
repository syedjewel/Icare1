<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/searchbox_style"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:hint="VaccineName"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:id="@+id/vaccineLVVaccineName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Details : "
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

    <TextView
        android:hint="Details"
        android:textSize="16sp"
        android:textStyle="normal"
        android:textColor="@android:color/black"
        android:id="@+id/vaccineLVVaccineDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Time : "
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />
    <TextView
        android:hint="Time"
        android:textSize="16sp"
        android:textStyle="normal"
        android:textColor="@android:color/black"
        android:id="@+id/vaccineLVVaccineTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:paddingBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Date : "
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />
    <TextView
        android:hint="Date"
        android:textSize="16sp"
        android:textStyle="normal"
        android:textColor="@android:color/black"
        android:id="@+id/vaccineLVVaccineDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>