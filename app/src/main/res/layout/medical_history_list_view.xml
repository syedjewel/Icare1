<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/searchbox_style"
    android:orientation="vertical">
    <LinearLayout
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:text="Date : "
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:id="@+id/mhLVdateTV"
            android:hint="Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:text="Prescription details : "
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <TextView
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:id="@+id/mhLVdetailsTV"
        android:hint="Prescription Details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:id="@+id/mhLVpescriptionIV"
        android:layout_gravity="center"
        android:layout_width="600px"
        android:layout_height="500px" />
    <LinearLayout
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:text="Prescribed by : "
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <TextView
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:id="@+id/mhLVdoctorTV"
        android:hint="Prescribed by"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>